bool isPalindrome(long int x) {
    long int num = x;
    long int reversed = 0;
    

    if (x<0){
        return false;
    }
    while (x != 0) {
        reversed = reversed * 10 + x % 10;
        x = x / 10;
    }

    

    if (num == reversed) {
        return true;
    }
    return false; 
}
